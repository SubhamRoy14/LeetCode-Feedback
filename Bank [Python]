class Bank:
    def __init__(self, n, a, p):
        self.name = n
        self.account = a
        self.principal = p

    def display(self):
        print("Hi", self.name, ", your account number is", self.account, "and has a balance of Rs.", self.principal)


class Account(Bank):
    def __init__(self, n, a, p):
        super().__init__(n, a, p)

    def deposit(self):
        d = int(input("Enter the value you want to deposit: "))
        self.principal += d
        print("\nRs.", d, "is being deposited into your account\n")

    def display(self):
        super().display()

    def withdraw(self):
        d = int(input("Enter the amount you want to withdraw: "))
        if d <= self.principal:
            self.principal -= d
            print("\nRs.", d, "is being debited from your account\n")
        else:
            print("Insufficient funds. Unable to withdraw.")


